<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scheduleItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="scheduleClicked"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/scheduleItemName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorPrimaryDark"
        android:text="Employee Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/scheduleItemWeekDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/lightGreen"
        android:text="Week Date"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/scheduleItemSundayHours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text="Sun"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/scheduleItemMondayHours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lightGreen"
        android:text="Mon"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/scheduleItemTuesdayHours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text="Tue"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/scheduleItemWednesdayHours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lightGreen"
        android:text="Wed"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/scheduleItemThursdayHours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text="Thu"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/scheduleItemFridayHours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lightGreen"
        android:text="Fri"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/scheduleItemSaturdayHours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text="Sat"
        android:textColor="@color/black"
        android:textSize="16sp"/>

</LinearLayout>