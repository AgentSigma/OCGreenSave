<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.dreyna3.ocgreensave.EditSchedulesActivity"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_schedules_title"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_schedule_view_all_schedules"
            android:layout_weight="1"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:textSize="26sp"
            android:layout_margin="5dp"
            android:onClick="toViewAllSchedulesClick"/>
        <Button
            android:layout_width="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_height="wrap_content"
            android:text="@string/edit_schedules_edit_button_text"
            android:layout_weight="1"
            android:textSize="26sp"
            android:layout_margin="5dp"
            android:onClick="toEditSchedulesClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_schedules_add_button_text"
            android:layout_weight="1"
            android:layout_margin="5dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:textSize="26sp"
            android:onClick="toAddScheduleClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="26sp"
            android:text="@string/edit_schedule_delete_button_text"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:textColor="@color/red"
            android:onClick="toDeleteSchedulesClick"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="@string/edit_schedule_back_button"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:padding="15dp"
        android:onClick="backToAdminMenuClick"/>

</LinearLayout>
