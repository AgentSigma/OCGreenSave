<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.dreyna3.ocgreensave.AdminActivity"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/AdminOptionsTextView"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/adminTextView"
        android:textSize="50sp" />

    <Button
        android:id="@+id/AdminOptionsLogBaleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="40sp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="@string/logBaleButton"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/AdminOptionsEditEmployeesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:layout_weight="1"
        android:text="@string/editEmployees" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="@string/mail_bale_history"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_bale_history"
        android:textSize="40sp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/clear_bale_history"
        android:textSize="24sp"
        android:textColor="@color/red"
        android:fontFamily="sans-serif-condensed"/>

    <Button
        android:id="@+id/AdminOptionsbackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out_button_text"
        android:layout_gravity="center"
        android:onClick="logOutClick"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>


</LinearLayout>
