<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="edu.orangecoastcollege.cs273.dreyna3.ocgreensave.LoginActivity"
    android:id="@+id/signInLayout">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGreen"
        android:layout_marginTop="40dp"
        android:text="@string/login_string"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:text="@string/login_description"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/signatureEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="@string/login_username_hint"
        android:inputType="text"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/keyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_password_hint"
        android:inputType="numberPassword"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:layout_below="@+id/signatureEditText" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="signInClick"
        android:id="@+id/signInButton"
        android:text="@string/login_buton_text" />

    <ImageView
        android:id="@+id/recycleLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/recycle_logo"/>
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/pirateImageView"
        android:layout_height="wrap_content"
        android:src="@drawable/pirate"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/staffEditionTextView"
        android:text="@string/staff_text"
        android:layout_below="@id/pirateImageView"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimaryDark"/>
</RelativeLayout>
